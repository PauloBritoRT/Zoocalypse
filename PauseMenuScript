    public void ChangeMapAviary()
    {
        money = float.Parse(getValue.text);
        if (money >= 1)
        {
            money -= 1;
            getValue.text = money.ToString("F2");
            backgroundTag = "aviary";

            bgBird.SetActive(true);
            bgSnake.SetActive(false);
            bgPig.SetActive(false);
            bgGiraffe.SetActive(false);
            bgPanda.SetActive(false);

            mapMarkA.SetActive(true);
            mapMarkB.SetActive(false);
            mapMarkC.SetActive(false);
            mapMarkD.SetActive(false);
            mapMarkE.SetActive(false);
            PlayerPrefs.SetString("backgroundtag", backgroundTag);
            LeavePopupA();
            costAudio.Play();
            ShowInterstitialAd();



        }
        else
        {
            errorAudio.Play();
        }
    }
    public void ChangeMapReptilarium()
    {
        money = float.Parse(getValue.text);
        if (money >= 5)
        {
            money -= 5;
            getValue.text = money.ToString("F2");
            backgroundTag = "reptilarium";

            bgBird.SetActive(false);
            bgSnake.SetActive(true);
            bgPig.SetActive(false);
            bgGiraffe.SetActive(false);
            bgPanda.SetActive(false);

            mapMarkA.SetActive(false);
            mapMarkB.SetActive(true);
            mapMarkC.SetActive(false);
            mapMarkD.SetActive(false);
            mapMarkE.SetActive(false);
            PlayerPrefs.SetString("backgroundtag", backgroundTag);
            LeavePopupB();
            costAudio.Play();
            ShowInterstitialAd();
        }
        else
        {
            errorAudio.Play();
        }
    }
