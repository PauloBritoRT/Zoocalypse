    public void ShowInterstitialAd()
    {
        if (PlayerPrefs.GetInt("XXXXX") != 1)
        {

            if (Advertisement.IsReady("video"))
            {
                Advertisement.Show("video");
            }
            else
            {
                Debug.Log("Ads not ready");
            }
        }
    }


    public void Quit()
    {
        Application.Quit();
    }

    public void MuteOn()
    {
        audioOn.SetActive(false);
        audioOff.SetActive(true);
        audioSource.Stop();
        PlayerPrefs.SetInt("isMute", 1);
        buttonAudio.Play();
    }
    public void MuteOff()
    {
        audioOn.SetActive(true);
        audioOff.SetActive(false);
        
        PlayerPrefs.SetInt("isMute", 0);
        buttonAudio.Play();
    }

    public void OnRemoveAdsPurchaseCompleted()
    {
        PlayerPrefs.SetInt("XXXXX", 1);
        removeAdsButton.SetActive(false);
        removeAdsButtonDummy.SetActive(true);
    }

    public void Resume()
    {
        if (skinTag == "moon")
        {
            pauseMenuUI.SetActive(false);
            Time.timeScale = 0.4f;
            GameIsPaused = false;
        }
        else
        {
            pauseMenuUI.SetActive(false);
            Time.timeScale = 1f;
            GameIsPaused = false;
        }
        resumeAudio.Play();
        if (PlayerPrefs.GetInt("isMute") != 1)
        {
            audioSource.Play();
        }


    }

    public void Pause()
    {
        pauseMenuUI.SetActive(true);
        Time.timeScale = 0f;
        GameIsPaused = true;
        pauseAudio.Play();
        audioSource.Stop();
    }

    public void Retry()
    {

        buttonAudio.Play();
        ShowInterstitialAd();
        if (skinTag == "moon")
        {
            Time.timeScale = 0.4f;
            SceneManager.LoadScene("Game");
        }
        else
        {
            Time.timeScale = 1f;
            SceneManager.LoadScene("Game");
        }

    }

    public void OpenSkinMenu()
    {
        buttonAudio.Play();
        pauseMenuUI.SetActive(false);
        skinMenuUI.SetActive(true);

        if (isOwnedB == true)
        {
            targetB.SetActive(true);
            
            descB.SetActive(false);
        }

        if (isOwnedC == true)
        {
            targetC.SetActive(true);
            
            descC.SetActive(false);
        }


        if (isOwnedD == true)
        {
            targetD.SetActive(true);
            
            descD.SetActive(false);
        }

        if (isOwnedE == true)
        {
            targetE.SetActive(true);
            
            descE.SetActive(false);
        }

        if (isOwnedF == true)
        {
            targetF.SetActive(true);
            
            descF.SetActive(false);
        }

        if (isOwnedG == true)
        {
            targetG.SetActive(true);
            
            descG.SetActive(false);
        }

        if (isOwnedH == true)
        {
            targetH.SetActive(true);
            
            descH.SetActive(false);
        }
    }

   

    public void OpenMapMenu()
    {
        pauseMenuUI.SetActive(false);
        mapMenuUI.SetActive(true);
        buttonAudio.Play();
    }

    

    public void LeaveSkinMenu()
    {
        skinMenuUI.SetActive(false);
        pauseMenuUI.SetActive(true);
        buttonAudio.Play();

    }

    public void LeaveMapMenu()
    {
        mapMenuUI.SetActive(false);
        pauseMenuUI.SetActive(true);
        buttonAudio.Play();

    }





    public void OpenStoreMenu()
    {
        pauseMenuUI.SetActive(false);
        storeMenuUI.SetActive(true);
        buttonAudio.Play();
    }



    public void LeaveStoreMenu()
    {
        storeMenuUI.SetActive(false);
        pauseMenuUI.SetActive(true);
        buttonAudio.Play();

    }






    public void OpenPopupA()
    {
        buttonAudio.Play();
        if (backgroundTag != "aviary")
        {
            popupA.SetActive(true);
            mapMenuUI.SetActive(false);
        }
    }
    public void LeavePopupA()
    {
        buttonAudio.Play();
        popupA.SetActive(false);
            mapMenuUI.SetActive(true);
   

    }
