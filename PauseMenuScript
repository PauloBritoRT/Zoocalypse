    public void ChangeSkinDefault() 
    {
        defaultSkin.SetActive(true);
        whiteRingSkin.SetActive(false);
        blueRingSkin.SetActive(false);
        blueOrbSkin.SetActive(false);
        redOrbSkin.SetActive(false);
        goldBlockSkin.SetActive(false);
        emeraldBlockSkin.SetActive(false);
        moonSkin.SetActive(false);

        defaultSkinB.SetActive(true);
        whiteRingSkinB.SetActive(false);
        blueRingSkinB.SetActive(false);
        blueOrbSkinB.SetActive(false);
